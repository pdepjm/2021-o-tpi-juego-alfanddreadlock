import soundProducer.*
import NPCs.*
import direcciones.*


describe "Mil maneras de morir" {
	const baba = new Baba(image = "BabaDerecha.png", position = null, direccionDeBaba = derecha)
	const explosion = new Explosion()
	
	method initialize() {
		soundProducer.provider(soundProviderMock)		
	}
	 
	test "Carpincho golpea bomberman"{
		carpinchoSinSonido.efecto(bomberman)
		assert.equals(2, bomberman.vidas())
	}
	
	test "Llama golpea bomberman"{
		llama.efecto(bomberman)
		assert.equals(2, bomberman.vidas())		
	}
	
	test "Baba golpea bomberman"{
		baba.efecto(bomberman)
		assert.equals(2, bomberman.vidas())
	}
	
	test "Fuego golpea bomberman"{
		explosion.daniar(bomberman)
		assert.equals(2, bomberman.vidas())
	}
}

